<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoodPlaces" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/topaz</item>
        <item name="colorPrimaryVariant">@color/topaz_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/golden_yellow</item>
        <item name="colorSecondaryVariant">@color/golden_yellow_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>
    </style>

    <style name="RatingBar" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="android:progressBackgroundTint">@color/black_20</item>
        <item name="android:progressBackgroundTintMode">@color/black_20</item>
    </style>

    <style name="GoodPlaces.TextTitle" parent="Theme.GoodPlaces">
        <item name="android:textColor">@color/topaz</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="GoodPlaces.TextSubtitle" parent="Theme.GoodPlaces">
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="CardView.RatingNumber" parent="Theme.GoodPlaces">
        <item name="android:textColor">@color/black_two</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="Detail.Title" parent="Theme.GoodPlaces">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/open_sans_light</item>
    </style>
    <style name="GoodPlaces.TextStyle2" parent="Theme.GoodPlaces">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/open_sans_light</item>
    </style>
    <style name="GoodPlaces.TextStyleInfo" parent="GoodPlaces.TextStyle2">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="GoodPlaces.CommentTextTitle" parent="GoodPlaces.TextTitle">
        <item name="textAllCaps">false</item>
    </style>
    <style name="GoodPlaces.CommentAuthor" parent="Theme.GoodPlaces">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/warm_grey</item>
    </style>

    <style name="GoodPlaces.ProfileImagePlaceHolder" parent="Theme.GoodPlaces">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="GoodPlaces.SeeAllCommentTextTitle" parent="GoodPlaces.CommentTextTitle">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/white</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
    </style>
</resources>