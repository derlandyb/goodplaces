<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_32">

    <FrameLayout
        android:id="@+id/profile_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_background"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/spacing_50"
            android:layout_height="@dimen/spacing_50"
            android:src="@drawable/hugh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profile_image_placeholder"
            android:layout_width="@dimen/spacing_50"
            android:layout_height="@dimen/spacing_50"
            android:visibility="gone"
            tools:text="TM"
            style="@style/GoodPlaces.ProfileImagePlaceHolder" />

    </FrameLayout>

    <RatingBar
        android:id="@+id/comment_rating"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_16"
        app:layout_constraintStart_toEndOf="@+id/profile_image_container"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comment_title"
        style="@style/GoodPlaces.CommentTextTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/comment_rating"
        app:layout_constraintTop_toBottomOf="@+id/comment_rating"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Fantástico!!" />

    <TextView
        android:id="@+id/comment_content"
        style="@style/GoodPlaces.TextStyleInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="4"
        app:layout_constraintStart_toStartOf="@+id/comment_title"
        app:layout_constraintTop_toBottomOf="@+id/comment_title"
        app:layout_constraintEnd_toEndOf="@+id/comment_title"
        tools:text="Tortas deliciosas. Os waffles também estavam muito bons. Equipe muito atenciosa. :)" />

    <TextView
        android:id="@+id/comment_author"
        style="@style/GoodPlaces.CommentAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="4"
        app:layout_constraintStart_toStartOf="@+id/comment_title"
        app:layout_constraintTop_toBottomOf="@+id/comment_content"
        app:layout_constraintEnd_toEndOf="@+id/comment_content"
        tools:text="Glória Ruiz, São João Del Rey - MG" />

</androidx.constraintlayout.widget.ConstraintLayout>